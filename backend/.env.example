# RoastMyStartup API - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED - Existing Configuration
# ============================================

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Database
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# ============================================
# NEW - Google OAuth Configuration
# ============================================

# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# For local development:
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# For production (Render):
GOOGLE_REDIRECT_URI=https://your-backend-url.onrender.com/auth/google/callback

# ============================================
# NEW - JWT Configuration
# ============================================

# Generate a strong secret key (use: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT Algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Token expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# ============================================
# NEW - Frontend Configuration
# ============================================

# Frontend base URL for OAuth redirects
# Local development (default if not set):
FRONTEND_BASE_URL=http://localhost:8080

# Production:
# FRONTEND_BASE_URL=https://roastmystartup.lovable.app

# ============================================
# Application Configuration
# ============================================

# Debug mode (set to False in production)
DEBUG=False
